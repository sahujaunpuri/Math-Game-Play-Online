<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_question2"
        android:layout_margin="30dp"
        android:background="@drawable/question_back"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:textColor="@color/Gold"
        android:fontFamily="serif" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="30dp">

        <Button
            android:text="@string/true_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_true"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/true_button"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeAnswerTrue"
            android:textColor="@color/Gold" />

        <Button
            android:text="@string/false_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btn_false"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/false_button"
            android:textSize="@dimen/textSizeAnswerTrue"
            android:textStyle="bold"
            android:textColor="@color/Gold" />
    </LinearLayout>
</LinearLayout>